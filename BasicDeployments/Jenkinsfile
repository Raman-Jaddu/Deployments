node {
    dir('MainCode') {
        git url: 'https://github.com/Raman-Jaddu/Hello-World.git'    
    }
    dir('DeploymentCode') {
        git url: 'https://github.com/Raman-Jaddu/Deployments.git'    
    }
    stage('Build') {
            sh '''
            pwd
            ls -R
            echo "Build Phase"
            echo "raman"
            '''
     }
     stage('Test') { 
            sh '''
            echo "Test Phase" 
            '''
     }
     stage('Deploy') { 
            sh '''
            echo "deployment Phase" 
            sh DeploymentCode/BasicDeployments/deployment_script.sh
            '''
     }
}
