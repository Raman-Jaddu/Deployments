node {
    dir('MainCode') {
        git url: 'https://github.com/Raman-Jaddu/Hello-World.git'    
    }
    dir('Deployments') {
        git url: 'https://github.com/Raman-Jaddu/Deployments.git'
    }
    stages {
        stage('Build') {
            steps {
                sh '''
                pwd
                ls
                cat README.md
                echo "Build Phase"
                '''
            }
        }
        stage('Test') { 
            steps {
                sh '''
                echo "Test Phase" 
                '''
            }
        }
        stage('Deploy') { 
            steps {
                sh '''
                echo "deployment Phase" 
                sh BasicDeployments/deployment_script.sh
                '''
            }
        }
    }
}
