pipeline {
    agent any 
    stages {
        stage('Build') { 
            steps {
                sh '''
                pwd
                ls
                echo "Build Phase"
                '''
            }
        }
        stage('Test') { 
            steps {
                sh '''
                echo "Test Phase" 
                '''
            }
        }
        stage('Deploy') { 
            steps {
                sh '''
                echo "deployment Phase" 
                sh BasicDeployments/deployment_script.sh
                '''
            }
        }
    }
}
